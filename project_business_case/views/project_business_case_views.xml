                        attrs="{'invisible': ['|',('lead_project_id', 'not in', False),]}"
                        colspan="2"
                        class="oe_highlight"
                        context="{'project_lead_id': [active_id]}"/>
                <separator colspan="2"/>
                <field name="lead_project_id"
                       attrs="{'invisible': [('lead_project_id', '=', False)]}"/>
